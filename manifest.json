//        "128": "images/zhihu.png"
//      }
//    },
    "icons": {
      "16": "images/zhihu.png",
      "32": "images/zhihu.png",
      "48": "images/zhihu.png",
      "128": "images/zhihu.png"
    },
  "manifest_version": 2
}
